<h3 class='title'><%= @movie_facade.movie_details_show.title %></h3>
<div class="btn btn-success"><%= button_to 'Discover Page', discover_index_path, method: :get %></div>
<%= button_to "Create Viewing Party for #{@movie_facade.movie_details_show.title}", new_movie_viewing_party_path(@movie_facade.movie_details_show.id), method: :get %>

<h5 class='vote_average'>Vote: <%= @movie_facade.movie_details_show.vote_average %></h5>
<h5 class='runtime'>Runtime: <%= @movie_facade.movie_details_show.runtime %></h5>
<h5 class='genre'>Genre: <%= @movie_facade.movie_details_show.genres.join(', ') %></h5>

<h3>Summary</h3>
<p class='summary'><%= @movie_facade.movie_details_show.summary %></p>

<h3 class='cast'>Cast</h3>
<% @credit_facade.movie_credits_show.cast.each do |cast_member| %>
  <%= "Actor: #{cast_member[0]}, Character: #{cast_member[1]}" %></br>
<% end %>

<div class='review-info'>
  <h3><%= @review_facade.movie_review_show.review_count %> Review(s)</h3>
  <% @review_facade.movie_review_show.review_info.each do |review| %>
    <h4 class='author'><%= review[0] %></h4>
    <p class='content'><%= review[1] %></p>
  <% end %>
</div>