<div class='top-movies'>
  <%= button_to 'Find Top Rated Movies', movies_path, method: :get, params: { q: 'top 20rated' } %>
</div>
<br>
<div class='search-movies'>
  <%= form_with url: movies_path, method: :get, local: true do |f| %>
    <%= f.label :q, "Search:" %>
    <%= f.text_field :q %>
    <%= f.submit "Find Movies" %>
  <% end %>
</div>